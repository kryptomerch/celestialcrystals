        </ul>
      </div>

      <!-- Newsletter -->
      <div class="footer__section">
        <div class="footer__newsletter">
          <h3>{{ section.settings.newsletter_title | default: 'Stay Connected' }}</h3>
          <p>{{ section.settings.newsletter_description | default: 'Subscribe to receive updates on new arrivals, special offers, and crystal wisdom.' }}</p>
          
          <form class="footer__newsletter-form" action="{{ routes.cart_add_url }}" method="post">
            <input 
              type="email" 
              class="footer__newsletter-input" 
              placeholder="Enter your email"
              name="contact[email]"
              required
            >
            <button type="submit" class="footer__newsletter-button">
              Subscribe
            </button>
          </form>
        </div>
      </div>
    </div>

    <!-- Footer Bottom -->
    <div class="footer__bottom">
      <div class="footer__copyright">
        <p>&copy; {{ 'now' | date: '%Y' }} {{ shop.name }}. All rights reserved.</p>
        <p>Powered by NextGen Jewelry Theme</p>
